<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitDeck_CSCI4805.MainPage">

    <StackLayout>
        <Frame BackgroundColor="CornflowerBlue" Padding="45">
            <Label Text="FitDeck" FontSize="50" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"></Label>
        </Frame>
        <Button x:Name="loginBtn" Text="Log In" BackgroundColor="CornflowerBlue" TextColor="White" FontSize="20" Margin="120,120,120,0" Clicked="loginBtn_Clicked"/>
        <Button x:Name="signupBtn" Text="Sign Up" BackgroundColor="CornflowerBlue" TextColor="White" FontSize="20" Margin="120,10,120,0" Clicked="signupBtn_Clicked" />
    </StackLayout>

</ContentPage>
